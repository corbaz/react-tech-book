{
  "name": "react-tech-book",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "bun-upgrade": "bun upgrade",
    "ncu-check": "ncu",
    "clean": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"Remove-Item -Recurse -Force node_modules -ErrorAction SilentlyContinue; exit 0\"",
    "update": "bun run clean && bun install",
    "dev": "vite --host",
    "format": "prettier --write .",
    "lint": "eslint .",
    "build": "vite build",
    "deploy": "surge dist --domain jcc-book-react.surge.sh",
    "preview": "vite preview --host"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.0"
  }
}
